<div class="container">
  <h1 class="text-center my-4 dashboard-h2 card-title">Enter Your Financial Information</h1>
  <div class="card-aurora mt-3 mb-5 mx-auto p-4" style="max-width: 500px;">
    <%= simple_form_for @month do |f| %>
      <!-- Total Assets -->
      <label for="total_assets" class="form-label">Total Assets</label>
      <div class="input-group mb-3">
        <span class="input-group-text sign fw-bold fs-5">짜</span>
        <%= f.input_field :total_assets, min: 0, step: 0.01, class: 'form-control', placeholder: "100,000" %>
      </div>
      <!-- Saved Amount -->
      <label for="saved_amount" class="form-label">Monthly Savings Amount</label>
      <div class="input-group mb-3">
        <span class="input-group-text sign fw-bold fs-5">짜</span>
        <%= f.input_field :saved_amount, min: 0, step: 0.01, class: 'form-control', placeholder: "50,000" %>
      </div>
      <!-- Hidden date -->
      <%= f.input :date, as: :hidden, input_html: { value: Date.today.beginning_of_month } %>
      <!-- Interest rate -->
      <div class="mb-3">
        <%= f.input :interest_rate, collection: Month::RATES.to_a, label_method: :first, value_method: :second, include_blank: false, selected: Month::RATES.to_a[-3].second %>
      </div>
      <!-- Retirement fields -->
      <div class="mb-3">
        <label for="retirement_age" class="form-label">Desired Retirement Age</label>
        <input type="number" name="retirement_age" id="retirement_age" class="form-control" placeholder="60" min="0">
      </div>
      <label for="monthly_expenses" class="form-label">Monthly Expenses for Retirement</label>
      <div class="input-group mb-3">
        <span class="input-group-text sign fw-bold fs-5">짜</span>
        <input type="number" name="monthly_expenses" id="monthly_expenses" class="form-control" placeholder="150,000" min="0">
      </div>
      <!-- Submit button -->
      <%= f.button :submit, "Run Projection", class: "btn btn-aurora-primary w-100 mt-2" %>
      <!-- Projected total -->
      <% if defined?(@total) && @total.present? %>
        <div class="alert alert-success mt-4 text-center">
          <strong>Projected Total:</strong>
          <%= number_to_currency(@total, unit: "짜") %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
