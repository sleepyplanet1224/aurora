<h1 class="text-center my-5 card-title">
  <strong>Build your future, one life event at a time</strong>
</h1>
<div class="card mx-auto p-4" style="max-width: 400px;">
  <%= simple_form_for @month do |f| %>
    <!-- Total Assets -->
    <label for="total_assets" class="form-label">
      <strong>Total Assets</strong>
    </label>
    <div class="input-group mb-3">
      <span class="input-group-text">¥</span>
      <%= f.input_field :total_assets, min: 0, step: 0.01, class: 'form-control', placeholder: 100 %>
    </div>
    <!-- Saved Amount -->
    <label for="saved_amount" class="form-label">
      <strong>Saved Amount</strong>
    </label>
    <div class="input-group mb-3">
      <span class="input-group-text">¥</span>
      <%= f.input_field :saved_amount, min: 0, step: 0.01, class: 'form-control', placeholder: 50 %>
    </div>
    <!-- Hidden date -->
    <%= f.input :date, as: :hidden, input_html: { value: Date.today.beginning_of_month } %>
    <!-- Interest rate -->
    <%= f.input :interest_rate, collection: Month::RATES.to_a, label_method: :first, value_method: :second, include_blank: false, selected: Month::RATES.to_a[-3] %>
    <!-- Retirement fields -->
    <%= f.label :retirement_age, "Desired Retirement Age" %>
    <%= f.input_field :retirement_age, name: "retirement_age", class: "form-control", value: 10, min: 0 %>
    <%= f.label :monthly_expenses, "Desired Retirement Monthly Expenses After Retirement" %>
    <%= f.input_field :monthly_expenses, name: "monthly_expenses", class: "form-control", value: 10, min: 0 %>
    <!-- Submit button -->
    <%= f.button :submit, "Run Projection", class: "btn btn-primary w-100 mt-4" %>
    <!-- Projected total -->
    <% if defined?(@total) && @total.present? %>
      <div class="alert alert-success mt-4 text-center">
        <strong>Projected Total:</strong>
        <%= number_to_currency(@total, unit: "¥") %>
      </div>
    <% end %>
  <% end %>
</div>
