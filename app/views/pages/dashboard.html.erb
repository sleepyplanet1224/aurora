<div>
  <!-- Button to open modal -->
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    + Create an event
  </button>
</div>

<div>
  <%= render 'pages/form' %>
</div>
<div>
  <%= render 'pages/chart' %>
</div>
<div>
  <%= render 'pages/summary' %>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create an event</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @event, url: events_path, html: { class: "modal-form" } do |f| %>
          <%= f.input :name, label: "Event Name", input_html: { class: "form-control" } %>
          <%= f.input :new_total_assets, label: "Total Assets", input_html: { class: "form-control" } %>
          <%= f.input :new_saved_amount, label: "Saved Amount", input_html: { class: "form-control" } %>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <%= f.button :submit, "Submit", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
