<div class="my-4 card-aurora">
  <div class="my-3" >
    <%= line_chart [
      {
        name: "Savings per Month",
        data: @chart_data_saved,
        dataset: {
          fill: "origin",
          backgroundColor: "rgba(53, 203, 165, 0.4)",
          borderColor: "rgba(53, 203, 165, 1)",
          order: 0
        }
      },
      {
        name: "Total Invested Assets",
        data: @chart_data_other,
        dataset: {
          fill: "-1",
          backgroundColor: "rgba(162, 96, 255, 0.4)",
          borderColor: "rgba(162, 96, 255, 1)",
          order: 1
        }
      },
      {
        name: "Life Event",
        data: @chart_data_event,
        dataset: {
          showLine: false,
          fill: false,
          pointRadius: 8,
          pointHoverRadius: 10,
          pointBorderWidth: 2,
          pointBackgroundColor: "#FF5C5C",
          pointBorderColor: "#FF5C5C",
          order: 0,
          stack: "events"
        }
      }
    ],
      legend: "bottom",
      stacked: true,
      colors: ["#2BB6A9", "#7A5CFF", "#FF5C5C"],
      height: "480px",
      library: {
        plugins: {
          title: {
            display: true,
            text: "Total Assets (Â¥)",
            font: { size: 32, weight: "bold" },
            padding: { bottom: 16 }
          }
        },

        scales: {
          x: {
            ticks: { maxTicksLimit: 20 }
          },
          y: {
            ticks: { maxTicksLimit: 10 }
          }
        }
      }
    %>
    <script>
      window.eventNamesMap = <%= raw @event_names_map.to_json %>;
    </script>
  </div>
</div>
