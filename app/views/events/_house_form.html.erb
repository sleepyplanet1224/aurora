<%= simple_form_for event, url: events_path, html: { class: "modal-form" } do |f| %>

  <%= f.label :house_price, "House Price" %>
  <%= f.input_field :house_price, name: "event[house_price]", class: "form-control", value: 20000000 %>

  <%= f.label :down_payment, "Down Payment" %>
  <%= f.input_field :down_payment, name: "event[down_payment]", class: "form-control", value: 500000 %>

  <%= render "events/range_field", f: f, attribute: :mortgage_rate, label: "Mortgage Annual Rate (%)", min: 0, max: 100, step: 5, default: 5, suffix: "%" %>

  <%= render "events/range_field", f: f, attribute: :mortgage_years, label: "Mortgage Length (years)", min: 1, max: 50, step: 1, default: 20, suffix: "" %>

  <%= f.input :new_total_assets, as: :hidden, input_html: { value: month.total_assets } %>
  <%= f.input :new_saved_amount, as: :hidden, input_html: { value: month.saved_amount } %>
  <%= f.input :month_id, as: :hidden, input_html: { value: month.id } %>
  <%= f.input :name, as: :hidden, input_html: { value: params[:search][:name] } %>

  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <%= f.button :submit, "Update Life Plan", class: "btn btn-primary" %>
  </div>

<% end %>
